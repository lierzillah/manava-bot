                  "scheduled_at": {
                    "type": "string",
                    "example": "2025-08-20 10:00:00"
                  },
                  "intervalCount": { "type": "integer", "example": 500 },
                  "intervalDelayMinutes": { "type": "integer", "example": 5 },
                  "repeatIntervalDays": { "type": "integer", "example": 0 },
                  "status": {
                    "type": "string",
                    "enum": ["scheduled", "sending", "done", "failed"],
                    "example": "scheduled"
                  },
                  "language": {
                    "type": "string",
                    "enum": ["ru", "ua", "en", "tr", "de", "es"],
                    "example": "en"
                  },
                  "text": { "type": "string", "example": "Good morning!" },
                  "mediaType": {
                    "type": "string",
                    "enum": ["photo", "video", "document", "gif", "none"],
                    "example": "photo"
                  },
                  "mediaFile": {
                    "type": "string",
                    "format": "binary",
                    "description": "Optional media file for the broadcast"
                  },
                  "buttons": {
                    "type": "object",
                    "example": { "text": "Click me" }
                  }
                },
                "required": ["title", "text", "language", "status"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Broadcast updated successfully" },
          "404": { "description": "Broadcast not found" }
        }
      },
      "delete": {
        "summary": "Delete broadcast",
        "description": "Delete a broadcast by its ID.",
        "tags": ["Broadcasts"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "broadcastId",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "responses": {
          "200": { "description": "Broadcast deleted successfully" },
          "404": { "description": "Broadcast not found" }
        }
      }
    },
    "/content-blocks": {
      "get": {
        "summary": "Get all content blocks",
        "tags": ["Content Blocks"],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": { "description": "List of all content blocks" }
        }
      }
    },
    "/content/block": {
      "post": {
        "summary": "Create a new content block",
        "tags": ["Content Blocks"],
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "parentId": { "type": "integer" },
                  "order": { "type": "integer" },
                  "code": { "type": "string" },
                  "content": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "language": {
                          "type": "string",
                          "enum": ["ru", "ua", "en", "tr", "de", "es"],
                          "default": "ua"
                        },
                        "text": { "type": "string" },
                        "mediaUrl": { "type": "string" },
                        "mediaType": {
                          "type": "string",
                          "enum": ["photo", "video", "document", "gif", "none"],
                          "default": "none"
                        }
                      },
                      "required": ["language", "text"]
                    }
                  }
                },
                "required": ["parentId", "content"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Content block created successfully" },
          "404": { "description": "Error creating content block" }
        }
      }
    },
    "/content/block/translation/{blockId}/{lang}": {
      "post": {
        "summary": "Create or update translation for a content block",
        "tags": ["Content Blocks"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "blockId",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" },
            "description": "ID of the content block"
          },
          {
            "name": "lang",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "enum": ["ru", "ua", "en", "tr", "de", "es"]
            },
            "description": "Language code for the translation"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "text": {
                    "type": "string",
                    "example": "Translated text here"
                  },
                  "mediaType": {
                    "type": "string",
                    "enum": ["none", "photo", "video", "document", "gif"],
                    "example": "none"
                  },
                  "mediaFile": {
                    "type": "string",
                    "format": "binary",
                    "description": "Optional media file for the translation"
                  }
                },
                "required": ["text", "mediaType"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Translation created or updated successfully"
          },
          "403": { "description": "Block not found or access denied" },
          "500": { "description": "Server error" }
        }
      }
    },
