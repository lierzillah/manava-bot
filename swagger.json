{
  "openapi": "3.0.0",
  "info": {
    "title": "User API",
    "version": "1.0.0",
    "description": "API documentation for user authentication, management, and access control"
  },
  "paths": {
    "/auth/login": {
      "post": {
        "summary": "Log in a user",
        "tags": ["Auth"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/UserLogin" }
            }
          }
        },
        "responses": {
          "200": { "description": "User logged in successfully" },
          "404": { "description": "Invalid credentials" }
        }
      }
    },
    "/auth/sign-up": {
      "post": {
        "summary": "Sign up a new user",
        "tags": ["Auth"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/UserCreate" }
            }
          }
        },
        "responses": {
          "200": { "description": "User created successfully" },
          "404": { "description": "Error creating user" }
        }
      }
    },
    "/auth/refresh-token": {
      "post": {
        "summary": "Refresh JWT access token",
        "tags": ["Auth"],
        "parameters": [
          {
            "in": "header",
            "name": "Authorization",
            "schema": { "type": "string" },
            "required": true
          }
        ],
        "responses": {
          "200": { "description": "New access token returned" },
          "404": { "description": "Invalid refresh token" }
        }
      }
    },
    "/user": {
      "get": {
        "summary": "Get current user by token",
        "tags": ["Auth"],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": { "description": "User details" },
          "404": { "description": "User not found" }
        }
      },
      "post": {
        "summary": "Create a new user",
        "tags": ["Users"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/UserCreate" }
            }
          }
        },
        "responses": {
          "200": { "description": "User created" },
          "404": { "description": "Error creating user" }
        }
      }
    },
    "/user/{userId}": {
      "get": {
        "summary": "Get user by ID",
        "tags": ["Users"],
        "parameters": [
          {
            "in": "path",
            "name": "userId",
            "schema": { "type": "integer" },
            "required": true
          }
        ],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": { "description": "User details" },
          "404": { "description": "User not found" }
        }
      },
      "put": {
        "summary": "Update user by ID",
        "tags": ["Users"],
        "parameters": [
          {
            "in": "path",
            "name": "userId",
            "schema": { "type": "integer" },
            "required": true
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/UserUpdate" }
            }
          }
        },
        "responses": {
          "200": { "description": "User updated successfully" },
          "500": { "description": "Error updating user" }
        }
      }
    },
    "/users": {
      "get": {
        "summary": "Get list of users",
        "tags": ["Users"],
        "parameters": [
          {
            "in": "query",
            "name": "isAdminPanelUser",
            "schema": { "type": "boolean" }
          }
        ],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": { "description": "List of users" }
        }
      }
    },
    "/check-access-token": {
      "get": {
        "summary": "Check if access token is valid",
        "tags": ["Auth"],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": { "description": "Valid token" },
          "404": { "description": "Invalid token" }
        }
      }
    },
    "/statistic/activity": {
      "get": {
        "tags": ["Statistics"],
        "summary": "Get user activity statistics",
        "description": "Returns overall user activity metrics. Requires Content Manager or Admin role.",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "User activity statistics",
            "content": {
              "application/json": {
                "example": {
                  "allUsers": 100,
                  "allAdminUsers": 5,
                  "telegramUsers": 95
                }
              }
            }
          },
          "403": {
            "description": "Access denied. Only Admin or Content Manager can view this content."
          },
          "404": {
            "description": "Resource not found"
          }
        }
      }
    },
    "/statistic": {
      "get": {
        "tags": ["Statistics"],
        "summary": "Get statistics by type",
        "security": [{ "bearerAuth": [] }],
        "description": "Returns statistics filtered by type and optional DAU, WAU, MAU flags.",
        "parameters": [
          {
            "name": "type",
            "in": "query",
            "schema": {
              "type": "string",
              "enum": [
                "start",
                "webapp_open",
                "click",
                "content_view",
                "lang_change",
                "screen_enter",
                "broadcast_view",
                "error",
                "unknown"
              ]
            },
            "description": "Type of event"
          },
          {
            "name": "dau",
            "in": "query",
            "schema": { "type": "boolean" },
            "description": "Include daily active users"
          },
          {
            "name": "wau",
            "in": "query",
            "schema": { "type": "boolean" },
            "description": "Include weekly active users"
          },
          {
            "name": "mau",
            "in": "query",
            "schema": { "type": "boolean" },
            "description": "Include monthly active users"
          }
        ],
        "responses": {
          "200": { "description": "Statistics by type" },
          "403": {
            "description": "Access denied. Only Admin or Content Manager can view this content."
          },
          "404": { "description": "Resource not found" }
        }
      },
      "post": {
        "tags": ["Statistics"],
        "summary": "Log a new statistic event",
        "description": "Saves a new user event in the system.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "userId": { "type": "integer" },
                  "type": {
                    "type": "string",
                    "enum": [
                      "start",
                      "webapp_open",
                      "click",
                      "content_view",
                      "lang_change",
                      "screen_enter",
                      "broadcast_view",
                      "error",
                      "unknown"
                    ]
                  },
                  "metadata": { "type": "object" },
                  "buttonId": { "type": "integer" }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Event logged successfully" },
          "404": { "description": "Failed to log event" }
        }
      }
    },
    "/statistic/users": {
      "get": {
        "tags": ["Statistics"],
        "security": [{ "bearerAuth": [] }],
        "summary": "Get full user statistics",
        "description": "Returns detailed user statistics with optional DAU, WAU, MAU filtering.",
        "parameters": [
          {
            "name": "type",
            "in": "query",
            "schema": {
              "type": "string",
              "enum": [
                "start",
                "webapp_open",
                "click",
                "content_view",
                "lang_change",
                "screen_enter",
                "broadcast_view",
                "error",
                "unknown"
              ]
            },
            "description": "Type of event"
          },
          {
            "name": "dau",
            "in": "query",
            "required": false,
            "schema": { "type": "boolean" }
          },
          {
            "name": "wau",
            "in": "query",
            "required": false,
            "schema": { "type": "boolean" }
          },
          {
            "name": "mau",
            "in": "query",
            "required": false,
            "schema": { "type": "boolean" }
          }
        ],
        "responses": {
          "200": { "description": "Detailed user statistics" },
          "403": {
            "description": "Access denied. Only Admin or Content Manager can view this content."
          },
          "404": { "description": "Resource not found" }
        }
      }
    },
    "/statistic/buttons": {
      "get": {
        "tags": ["Statistics"],
        "security": [{ "bearerAuth": [] }],
        "summary": "Get top button click statistics",
        "description": "Returns top clicked buttons statistics. Optional DAU, WAU, MAU filtering.",
        "parameters": [
          {
            "name": "type",
            "in": "query",
            "schema": {
              "type": "string",
              "enum": [
                "start",
                "webapp_open",
                "click",
                "content_view",
                "lang_change",
                "screen_enter",
                "broadcast_view",
                "error",
                "unknown"
              ]
            },
            "description": "Type of event"
          },
          { "name": "dau", "in": "query", "schema": { "type": "boolean" } },
          { "name": "wau", "in": "query", "schema": { "type": "boolean" } },
          { "name": "mau", "in": "query", "schema": { "type": "boolean" } }
        ],
        "responses": {
          "200": { "description": "Top button click statistics" },
          "403": {
            "description": "Access denied. Only Admin or Content Manager can view this content."
          },
          "404": { "description": "Resource not found" }
        }
      }
    },
    "/broadcasts": {
      "get": {
        "summary": "Get all broadcasts",
        "description": "Retrieve all broadcasts with their contents and status statistics.",
        "tags": ["Broadcasts"],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "List of broadcasts and statistics",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "statusSuccess": { "type": "integer", "example": 10 },
                    "statusError": { "type": "integer", "example": 2 },
                    "allBroadcasts": {
                      "type": "array",
                      "items": { "$ref": "#/components/schemas/Broadcast" }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create a new broadcast",
        "description": "Create a new broadcast and its content.",
        "tags": ["Broadcasts"],
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": { "type": "string", "example": "Morning broadcast" },
                  "scheduled_at": {
                    "type": "string",
                    "example": "2025-08-20 10:00:00"
                  },
                  "intervalCount": { "type": "integer", "example": 500 },
                  "intervalDelayMinutes": { "type": "integer", "example": 5 },
                  "repeatIntervalDays": { "type": "integer", "example": 0 },
                  "status": {
                    "type": "string",
                    "enum": ["scheduled", "sending", "done", "failed"],
                    "example": "scheduled"
                  },
                  "language": {
                    "type": "string",
                    "enum": ["ru", "ua", "en", "tr", "de", "es"],
                    "example": "en"
                  },
                  "text": { "type": "string", "example": "Good morning!" },
                  "mediaType": {
                    "type": "string",
                    "enum": ["photo", "video", "document", "gif", "none"],
                    "example": "photo"
                  },
                  "mediaFile": {
                    "type": "string",
                    "format": "binary",
                    "description": "Optional media file for the broadcast"
                  },
                  "buttons": {
                    "type": "object",
                    "example": { "text": "Click me" }
                  }
                },
                "required": ["title", "text", "language", "status"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Broadcast created successfully",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Broadcast" }
              }
            }
          }
        }
      }
    },
    "/broadcasts/{broadcastId}": {
      "get": {
